<div class="container mt-5">
  <h1><%= action_name.capitalize %> Task</h1>
  <%= form_with(model: [current_user, @task], local: true) do |form| %>
    <div class="form-group">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :description, class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :due_date, class: 'form-label' %>
      <%= form.datetime_select :due_date, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :priority, class: 'form-label' %>
      <%= form.select :priority, Task.priorities.keys.map { |p| [p.capitalize, p] }, {}, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :status, class: 'form-label' %>
      <%= form.select :status, Task.statuses.keys.map { |s| [s.capitalize, s] }, {}, class: 'form-control' %>
    </div>

    <%= form.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', user_tasks_path(current_user), class: 'btn btn-secondary' %>
  <% end %>
</div>
